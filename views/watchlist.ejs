<script>
  var list = Array();

  function change(obj) {
    if (obj.checked)
      list.push(obj.value)
    else {
      let ind = list.indexOf(obj.value);
      list.splice(ind, 1);
    }
    document.checkform.check.value = list;
  }

  function rating(obj) {
    let ind = obj.id.slice(-1);
    fetch(`/changeRating/${ind}/${obj.value}`);
  }


  function recommend() {
    location.href = "/recommend";
  }
</script>
